      %img{:height => "68px", :src => "{{content.banc_eines.logo}}"}
      %h2  {{content.banc_eines.titol}}

    .brecursos_block
      .row
        %h2 {{content.banc_eines.subtitol_1}}
        %div{"ng-bind-html" => "content.banc_eines.contingut_1"}
    .brecursos_block
      .row
        %h2 {{content.banc_eines.subtitol_2}}
        %div{"ng-bind-html" => "content.banc_eines.contingut_2"}
    .brecursos_block
      .row
        .small-12.medium-12.columns
          %h2 {{content.banc_eines.subtitol_3}}
          %div{"ng-bind-html" => "content.banc_eines.contingut_3"}
        .small-12.medium-4.columns
          %a{:href => "{{content.banc_eines.link1_url}}", :download => "", :target => "_blank"} {{content.banc_eines.link1_text}}
        .small-12.medium-4.columns
          %a{:href => "{{content.banc_eines.link2_url}}", :download => "", :target => "_blank"} {{content.banc_eines.link2_text}}
