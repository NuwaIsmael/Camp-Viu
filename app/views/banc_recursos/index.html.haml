- content_for :injection_data do
  = inject_available_countries
  = inject_enterprise_shopfront_list
  = inject_open_street_map_config

:css
  #tagline:before { background-image: url("#{ContentConfig.home_hero.url}") }




#panes
%section.brecursos{:"ng-controller" => "BRecursosController"}
  .brecursos_header
    %img{:height => "68px", :src => "{{content.header_logo}}"}
    %h1  {{content.header_titol}}

  %section{:id => "eines"}
